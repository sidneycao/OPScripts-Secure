
alias ll='ls -al -G'
alias vi='vim'
alias rm='rm -i'
alias rmm='move(){ [ -d ~/.Trash ] || mkdir -p ~/.Trash; mv -iv $@ ~/.Trash/; };move $@'
alias mv='mv -i'
alias tf='terraform'

